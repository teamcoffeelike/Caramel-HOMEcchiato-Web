	<select id="getTotalCount"
			resultType="Integer">
		SELECT COUNT(*)
		  FROM qna
	</select>

	<select id="getQnas"
			parameterType="Page"
			resultType="Qna">
		SELECT *
          FROM (SELECT qna.ID,
                       qna.TITLE,
                       qna.CONTENT, 
                       qna.WRITEDATE, 
                       qna.WRITER,
                       users.name,
                       rownum r
                  FROM qna JOIN users ON qna.writer = users.id
                 ORDER BY id DESC)
         WHERE r BETWEEN ((${currentPage}-1)*10)+1 AND ${currentPage}*10
	</select>
	
	
	<insert id="insert">
		INSERT INTO qna (id, writer, title, content)
			 VALUES (qna_seq.nextval, #{writer}, #{title}, #{content})
	</insert>
	
	<select id="detail" 
			resultType="Qna">
		SELECT q.*, (SELECT name FROM users u WHERE u.id=q.writer) name
	      FROM qna q
	     WHERE id = #{id}
	</select>
	
	<update id="update">
		UPDATE qna
		   SET title=#{title}, content=#{content}
		 WHERE id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM qna
			  WHERE id=#{id}
	</delete>
</mapper>